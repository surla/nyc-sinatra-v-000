<h2>Edit figure</h2>

<form action="/figures/<%= @figure.id %>" method="post">
  <label>Name: </label>
  <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>">

<p>
  <label>Choose an existing title</label><br>
    <% Title.all.each do |title| %>
      <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>" <%= 'checked' if @figure.titles.include?(title) %>><%= title.name %></input>
    <% end %>
</p>
  <label>and/or, create a new title:</label>
    <input type="text" name="title[name]" id="new_title">

<p>
  <label>Choose an existing landmark:</label><br>
    <% Landmark.all.each do |landmark| %>
      <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>" <%= 'checked' if @figure.landmarks.name == landmark %> ><%= landmark.name %></input>
    <% end %>
</p>

  <label>and/or, create a new landmark:</label>
    <input type="text" name="landmark[name]" id="new_landmark">

<br><br>
    <input type="submit" value="Edit Figure">
</form>
